<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPlainMarketing"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- Turned on signature -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bghighlight"
        android:orientation="vertical" >

        <TextView
            style="@style/TextHeader"
            android:text="@string/turned_on" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    style="@style/TextTitle"
                    android:text="@string/for_company_rep" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp" >

                        <ImageView
                            android:id="@+id/signature1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/background_dialoguelayout"
                            android:scaleType="fitXY" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                style="@style/TextTitle"
                android:text="@string/witness" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp" >

                <ImageView
                    android:id="@+id/signature2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/background_dialoguelayout"
                    android:scaleType="fitXY" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/TextTitle"
                    android:text="@string/time" />

                <TextView
                    android:id="@+id/edTicketTurnedOnTime"
                    style="@style/TextInput"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/TextTitle"
                    android:text="@string/off_seal" />

                <EditText
                    android:id="@+id/edTicketTurnedOnOffseal"
                    style="@style/TextInput" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- SHUT OFF -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bghighlight"
        android:orientation="vertical" >

        <TextView
            style="@style/TextHeader"
            android:text="@string/shut_off" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/TextTitle"
                    android:text="@string/for_company_rep" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp" >

                        <ImageView
                            android:id="@+id/signature3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/background_dialoguelayout"
                            android:scaleType="fitXY" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                style="@style/TextTitle"
                android:text="@string/witness" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp" >

                <ImageView
                    android:id="@+id/signature4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/background_dialoguelayout"
                    android:scaleType="fitXY" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/TextTitle"
                    android:text="@string/time" />

                <TextView
                    android:id="@+id/edTicketShupOffTime"
                    style="@style/TextInput" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/TextTitle"
                    android:text="@string/on_seal" />

                <EditText
                    android:id="@+id/edTicketShupOffOnseal"
                    style="@style/TextInput" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@style/TextTitle"
                    android:text="@string/date" />

                <EditText
                    android:id="@+id/edTicketShupOffDate"
                    style="@style/TextInput" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- END SHUT OFF -->

</LinearLayout>