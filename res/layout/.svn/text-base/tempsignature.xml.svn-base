<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPlainMarketing"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >
    <!-- Turned on signature -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bghighlight"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="TURNED ON"
            android:textColor="#f47320"
            android:textSize="25dip"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="DRIVER SIGNATURE"
                    android:textColor="#f47320"
                    android:textSize="20dip" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp" >
                        <ImageView
                            android:id="@+id/signature1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/background_dialoguelayout"
                            android:scaleType="fitXY" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="WITNESS(SIGNATURE)"
                android:textColor="#f47320"
                android:textSize="20dip" />
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp" >
                <ImageView
                    android:id="@+id/signature2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/background_dialoguelayout"
                    android:scaleType="fitXY" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="TIME"
                    android:textColor="#f47320"
                    android:textSize="20dip" />
                <TextView
                    android:id="@+id/edTicketTurnedOnTime"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:background="@xml/highlight_edittext"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/edother1"
                    android:paddingLeft="3dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="OFF SEAL"
                    android:textColor="#f47320"
                    android:textSize="20dip" />
                <EditText
                    android:id="@+id/edTicketTurnedOnOffseal"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@xml/highlight_edittext"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/edother1"
                    android:paddingLeft="3dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- SHUT OFF -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bghighlight"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="SHUT OFF"
            android:textColor="#f47320"
            android:textSize="25dip"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="DRIVER SIGNATURE"
                    android:textColor="#f47320"
                    android:textSize="20dip" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp" >
                        <ImageView
                            android:id="@+id/signature3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/background_dialoguelayout"
                            android:scaleType="fitXY" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="WITNESS(SIGNATURE)"
                android:textColor="#f47320"
                android:textSize="20dip" />
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp" >
                <ImageView
                    android:id="@+id/signature4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/background_dialoguelayout"
                    android:scaleType="fitXY" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="TIME"
                    android:textColor="#f47320"
                    android:textSize="20dip" />
                <TextView
                    android:id="@+id/edTicketShupOffTime"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:background="@xml/highlight_edittext"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/edother1"
                    android:paddingLeft="3dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="ON SEAL"
                    android:textColor="#f47320"
                    android:textSize="20dip" />
                <EditText
                    android:id="@+id/edTicketShupOffOnseal"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@xml/highlight_edittext"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/edother1"
                    android:paddingLeft="3dip" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="DATE"
                android:textColor="#f47320"
                android:textSize="20dip" />
            <EditText
                android:id="@+id/edTicketShupOffDate"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@xml/highlight_edittext"
                android:imeOptions="actionNext"
                android:nextFocusDown="@+id/edother1"
                android:paddingLeft="3dip" />
        </LinearLayout>
    </LinearLayout>
    <!-- END SHUT OFF -->
</LinearLayout>